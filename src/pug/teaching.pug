section#teaching
    .container
        .row
            .col-12
                .wow.fadeInUp.section-title(data-wow-delay='0.2s')
                    h2 Teaching
        .row.justify-content-between
            each course in teaching
                - var courseNumber = course.crossListing ? course.classNumber + "/" + course.crossListing : course.classNumber
                .col-sm-12.col-md-6.wow.fadeInUp(data-wow-delay='0.4s')
                    .d-flex.flex-wrap.mb-3
                        a.d-block.course-catalog-popover( data-toggle="popover", title=courseNumber + "   Catalog Description" , data-content=course.catalogText)
                            .d-inline-block
                                .d-flex.align-items-start
                                    h5.pr-2= course.name
                                div.d-flex.align-items-baseline
                                    h6.pr-2
                                        span= course.classNumber
                                        if course.crossListing
                                            span /
                                        span= course.crossListing
                                    p= course.institute
                        a.btn-link.gray-tooltip( href= course.synopsisUrl, target="_blank", data-toggle="tooltip",data-placement="top", title="Course Synopsis")
                            i.fa.fa-file-text-o.course-synopsis-link
