{
  "name": "dralexgreaney.com",
  "version": "0.1.1",
  "description": "Dr. Greaney's Research Group Site",
  "main": "index.js",
  "scripts": {
    "test": "test",
    "scss": "node-sass --output-style compact -o public/css src/scss/main.sass",
    "autoprefixer": "postcss -u autoprefixer -r public/css/*",
    "watch:pug": "pug -O src/data.js src/pug/index.pug --out public --watch --pretty",
    "pug-to-js": "pug --obj src/research-pages/research-page-options.json src/research-pages/research-project-page.pug --client --pretty",
    "build-html": "onchange 'src/data.js' -- npm run watch-pug",
    "uglify": "uglifyjs src/vendor/jquery.js src/vendor/tether.js src/vendor/*.js src/pugTemplateFunctions.js src/app.js -m -o public/build.js --beautify",
    "watch:css": "onchange 'src/scss/*.sass' -i -v -- npm run scss",
    "watch:js" : "onchange 'src/*.js' -i -v -- npm run uglify",
    "watch:all": "npm run watch:pug && npm run watch:css && npm run watch:js",
    "build:css": "npm run scss && npm run autoprefixer",
    "build:js": "npm run lint && npm run uglify",
    "build:all": "npm run build:css && npm run build:js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/autumnfjeld/dralexgreaney.git"
  },
  "keywords": [
    "Alex Greaney",
    "Computational Materials Science"
  ],
  "author": "Autumn Fjeld",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/autumnfjeld/dralexgreaney/issues"
  },
  "homepage": "https://github.com/autumnfjeld/dralexgreaney#readme",
  "devDependencies": {
    "autoprefixer": "^7.0.1",
    "bib2json": "0.0.1",
    "cssmin": "^0.4.3",
    "node-sass": "^4.5.2",
    "onchange": "^3.2.1",
    "postcss-cli": "^4.0.0",
    "pug": "^2.0.0-rc.1",
    "pug-cli": "^1.0.0-alpha6",
    "uglify-js": "^3.0.4"
  }
}
